<div class="container">
  <div class="col-8 mt-5 mx-auto">
    <p style="color: green"><%= notice %></p>
    <h1>Scans</h1>

    <div class="row mt-5">
      <% @scans.each do |scan| %>
        <div class="col-6">
        <table>
          <tr>
            <td><%= scan.title %></td>
            <% if scan.photo.attached? %>
              <td class="image"><%= cl_image_tag scan.photo.key , alt: "tag scan", style: "width: 100px" %></td>
            <% end %>
          </tr>
          <tr>
            <td><%= link_to 'Show', scan %></td>
            <td><%= link_to 'Edit', edit_scan_path(scan) %></td>
            <td><%= link_to 'Destroy', scan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          </table>
        </div>
      <% end %>
    </div>
    <div class="row mt-5">
    <%= link_to "New scan", new_scan_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
